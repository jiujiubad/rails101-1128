<table class="table table-bordered">
  <thead>
    <tr>
      <th>群组</th>
      <th>群描述</th>
      <th>群组</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <th><%= link_to(group.title, group_path(group)) %></th>
        <th><%= render_group_simple_format(group) %></th>
        <th><%= group.user.email %></th>
        <th>
          <% if current_user && current_user == group.user %>
            <%= link_to("编辑", edit_account_group_path(group), class:"btn btn-info btn-sm") %>
            <%= link_to("删除", account_group_path(group), method: :delete, data:{confirm:"确认删除？"}, class:"btn btn-danger btn-sm") %>
          <% end %>
        </th>
      </tr>
    <% end %>
  </tbody>
</table>
